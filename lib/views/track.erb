<% require_relative '../models/youtube' %>
<div class = "artist-box">
  <h2>Artist: <%=!@track.empty? ? @track["artist"] : "No Data"%></h2>
  <h3>Album: <%=!@track.empty? ? @track["album"] : ""%></h3>
  <div class = "track-box">
    <% unless @track.empty? %>
      <h4>Track: <%=@track["name"]%></h5>
      <p>Price: <%="Â£ #{@track["price"]}" %> </p>
      <p>Duration: <%= "#{(@track["duration"]/60000).round(2)} min" %></p>
    <% end %>
  </div>
  <% if @track["videos"] %>
    <div class = "video-box">
      <div class="thumbnails">
        <% @track["videos"].each do |video_id| %>
          <a href = '\video\<%= video_id %>'><img src = <%= Youtube.thumbnail(video_id)%>></a>
        <% end %>
      </div>
    <% if @video %>
      <div class = "video">
        <iframe
        src=<%= @video %>
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
      </div>
    <% end %>
  </div>
<% end %>
